user  nginx;
worker_processes  auto;

error_log  /var/log/nginx/error.log;
#error_log  /var/log/nginx/error.log  notice;
#error_log  /var/log/nginx/error.log  info;

pid        /var/run/nginx.pid;

events {
    worker_connections  1024;
}

stream {
    server {
        listen                1112 ssl;
        proxy_pass            127.0.0.1:1111;

        ssl_certificate       dummy_cert.pem ;
        ssl_certificate_key   dummy_key.pem;
        ssl_protocols         TLSv1 TLSv1.1 TLSv1.2;
        ssl_ciphers AESGCM:HIGH:!aNULL:!MD5;
        ssl_session_cache     shared:SSL:20m;
        ssl_session_timeout   5m;
        ssl_handshake_timeout 15s;
     }
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile        on;
    tcp_nopush      on;

    keepalive_timeout   2;

    #gzip  on;

    # Load modular configuration files from the /etc/nginx/conf.d directory.
    # See http://nginx.org/en/docs/ngx_core_module.html#include
    # for more information.
    include /etc/nginx/conf.d/*.conf;

    index   index.html index.htm;

    server {
        listen       80;
        listen       443 ssl http2;
        server_name  localhost;
        root         /opt/virtuoso-opensource/var/lib/virtuoso/vsp;

        ssl_certificate      dummy_cert.pem ;
        ssl_certificate_key  dummy_key.pem;

        ssl_session_timeout  5m;

        ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
        ssl_ciphers AESGCM:HIGH:!aNULL:!MD5;
        ssl_prefer_server_ciphers   on;

        location ~ \.(js|css|png|gif|jp(e?)g)$ {
          try_files $uri @vz;
        }

        location / {
          ## InstanceID Checker >>>
          # You can remove this lines after registration.
          if ( -e /opt/lw1/www/install_amiage.php ) {
             rewrite ^(.*)$ /install_amiage.php redirect;
          }
          ## << InstanceID Checker

          proxy_pass   http://127.0.0.1:8890;
          proxy_set_header        Host $host;
          proxy_set_header        X-Forwarded-Proto $scheme;
          proxy_set_header        X-Real-IP $remote_addr;
          proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_connect_timeout   150;
          proxy_send_timeout      100;
          proxy_read_timeout      100;
          proxy_buffers           4 32k;
          proxy_redirect http:// $scheme://;
          client_max_body_size    500m;
          client_body_buffer_size 128k;
        }

        location  @vz {
          proxy_pass   http://127.0.0.1:8890;
          proxy_set_header        Host $host;
          proxy_set_header        X-Forwarded-Proto $scheme;
          proxy_set_header        X-Real-IP $remote_addr;
          proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_connect_timeout   150;
          proxy_send_timeout      100;
          proxy_read_timeout      100;
          proxy_buffers           4 32k;
          proxy_redirect http:// $scheme://;
          client_max_body_size    500m;
          client_body_buffer_size 128k;
        }

        location = /install_amiage.php {
          root         /opt/lw1/www;
          include fastcgi_params;
          fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
          fastcgi_pass   php-fpm;
        }

        # redirect server error pages to the static page /40x.html
        #
        error_page  404              /404.html;
        location = /40x.html {
        }

        # redirect server error pages to the static page /50x.html
        #
        error_page   500 502 503 504  /50x.html;
        location = /50x.html {
        }

    }
}
